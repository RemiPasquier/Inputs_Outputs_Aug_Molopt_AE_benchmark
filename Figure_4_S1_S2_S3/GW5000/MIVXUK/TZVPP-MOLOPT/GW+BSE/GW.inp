      	  &GW
	    CORR_MOS_OCC -1
	    CORR_MOS_VIRT -1
	    &BSE
              BSE_DIAG_METHOD FULLDIAG
              TDA OFF
            &END BSE 
          &END GW	
        &END RI_RPA
      &END WF_CORRELATION
    &END XC
    &PRINT
    &OVERLAP_CONDITION ON
    DIAGONALIZATION T
    &END OVERLAP_CONDITION
    &END PRINT
