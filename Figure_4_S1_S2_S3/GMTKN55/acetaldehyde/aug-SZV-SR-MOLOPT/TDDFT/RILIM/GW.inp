    BASIS_SET_FILE_NAME /scratch/hpc-prf-metdyn/metdyn02_Remi/BASIS_AUG_MOLOPT/aug-cc-pVZ-TOTRI
    SORT_BASIS EXP
    POTENTIAL_FILE_NAME  /pc2/groups/hpc-prf-metdyn/metdyn02_Remi/cp2k/cp2k/data/ALL_POTENTIALS 
    CHARGE 0
    &MGRID
      CUTOFF  500
      REL_CUTOFF  100
    &END MGRID
    &POISSON
      PERIODIC NONE
      POISSON_SOLVER WAVELET
    &END POISSON
    &QS
      METHOD GAPW
      EPS_DEFAULT 1.0E-12
      EPS_PGF_ORB 1.0E-12
    &END QS
    &SCF
        SCF_GUESS RESTART
        MAX_SCF 500
        &OT
        PRECONDITIONER FULL_SINGLE_INVERSE
        MINIMIZER CG
        LINESEARCH 3PNT
        &END
        EPS_SCF 1.0E-6
        &OUTER_SCF
        MAX_SCF 20
        EPS_SCF 1.0E-6
        &END
        &PRINT
        &RESTART
        &EACH
        MD 0
        &END EACH
        &END
        &END
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE0
      &END XC_FUNCTIONAL
      &HF
         &MEMORY
          MAX_MEMORY 8000
         &END MEMORY
      &END HF
