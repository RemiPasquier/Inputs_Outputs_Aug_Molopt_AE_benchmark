&GLOBAL
	PROJECT_NAME MOLNAME
	RUN_TYPE ENERGY
    EXTENDED_FFT_LENGTHS
	&TIMINGS
		THRESHOLD 0.005
	&END TIMINGS
&END GLOBAL

&FORCE_EVAL
	METHOD QS
	&DFT
		BASIS_SET_FILE_NAME BASIS_augMOLOPT_rename
		BASIS_SET_FILE_NAME BASIS_cc_pVDZ
		POTENTIAL_FILE_NAME ALL_POTENTIALS
		&PRINT
		  &OVERLAP_CONDITION
		  	DIAGONALIZATION
		  &END OVERLAP_CONDITION
		  &MO
			ENERGIES
		  &END MO
		&END PRINT
		&MGRID
			CUTOFF 600
			REL_CUTOFF 60
		&END MGRID
		&QS
			EPS_DEFAULT 1e-15
			METHOD GAPW
		&END QS
		&SCF
			SCF_GUESS RESTART
			EPS_SCF 1e-6
			MAX_SCF 200
            CHOLESKY RESTORE
            ADDED_MOS 100
			&SMEAR ON
				METHOD FERMI_DIRAC
				ELECTRONIC_TEMPERATURE [K] 100 
			&END SMEAR    
			&MIXING
				METHOD BROYDEN_MIXING
				ALPHA 0.4
				NBROYDEN 4
			&END MIXING
		&END SCF
		&XC
			&XC_FUNCTIONAL PBE
			&END XC_FUNCTIONAL
		&END XC
		&POISSON
			PERIODIC NONE
			POISSON_SOLVER MT
		&END POISSON
	&END DFT
	&SUBSYS
		&CELL
			PERIODIC NONE
			ABC 21.19 46.86 13.55
		&END CELL
		&TOPOLOGY
			&CENTER_COORDINATES
			&END CENTER_COORDINATES
			COORD_FILE_FORMAT XYZ
			COORD_FILE_NAME Nanographene_8.xyz
		&END TOPOLOGY
		&KIND H
			POTENTIAL ALL
			BASIS_SET ORB aug-DZVP-MOLOPT-ae
			BASIS_SET RI_AUX RI_aug-DZVP-MOLOPT-ae_tier1
		&END KIND
		&KIND C
			POTENTIAL ALL
			BASIS_SET ORB aug-DZVP-MOLOPT-ae
			BASIS_SET RI_AUX RI_aug-DZVP-MOLOPT-ae_tier1
		&END KIND
	&END SUBSYS
&END FORCE_EVAL
