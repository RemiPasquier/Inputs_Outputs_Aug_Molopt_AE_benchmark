&GLOBAL
	PROJECT_NAME MOLNAME
	RUN_TYPE ENERGY
    EXTENDED_FFT_LENGTHS
	&TIMINGS
		THRESHOLD 0.005
	&END TIMINGS
&END GLOBAL

&FORCE_EVAL
	METHOD QS
	&DFT
		BASIS_SET_FILE_NAME BASIS_augMOLOPT
		BASIS_SET_FILE_NAME BASIS_cc_pVDZ
		POTENTIAL_FILE_NAME ALL_POTENTIALS
		&PRINT
		  &OVERLAP_CONDITION
		  	DIAGONALIZATION
		  &END OVERLAP_CONDITION
		  &MO
			ENERGIES
		  &END MO
		&END PRINT
		&MGRID
			CUTOFF 600
			REL_CUTOFF 60
		&END MGRID
		&QS
			EPS_DEFAULT 1.0E-15
			METHOD GAPW
		&END QS
		&SCF
			SCF_GUESS RESTART
			IGNORE_CONVERGENCE_FAILURE T
			EPS_SCF 1e-6
			MAX_SCF 1
            CHOLESKY OFF
            ADDED_MOS 100
			&SMEAR ON
				METHOD FERMI_DIRAC
				ELECTRONIC_TEMPERATURE [K] 300 
			&END SMEAR    
			&MIXING
				METHOD BROYDEN_MIXING
				ALPHA 0.1
				NBROYDEN 4
			&END MIXING
		&END SCF
		&XC
			&XC_FUNCTIONAL PBE
			&END XC_FUNCTIONAL
		&END XC
		&POISSON
			PERIODIC NONE
			POISSON_SOLVER MULTIPOLE
		&END POISSON
	&END DFT
	&SUBSYS
		&CELL
			PERIODIC NONE
			ABC 30.84 46.88 26.  
		&END CELL
		&TOPOLOGY
			&CENTER_COORDINATES
			&END CENTER_COORDINATES
			COORD_FILE_FORMAT XYZ
			COORD_FILE_NAME Nanographene_8.xyz
		&END TOPOLOGY
		&KIND H
			POTENTIAL ALL
			BASIS_SET ORB aug-cc-pVDZ
			BASIS_SET RI_AUX aug-cc-pVDZ-RIFIT
		&END KIND
		&KIND C
			POTENTIAL ALL
			BASIS_SET ORB aug-cc-pVDZ
			BASIS_SET RI_AUX aug-cc-pVDZ-RIFIT
		&END KIND
	&END SUBSYS
&END FORCE_EVAL
