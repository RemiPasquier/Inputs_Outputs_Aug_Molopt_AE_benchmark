    &END POISSON
    &QS
      METHOD GAPW
      EPS_DEFAULT 1.0E-12
      EPS_PGF_ORB 1.0E-12
    &END QS
    &SCF
        SCF_GUESS RESTART
        MAX_SCF 500
        &OT
        PRECONDITIONER FULL_SINGLE_INVERSE
        MINIMIZER CG
        LINESEARCH 3PNT
        &END
        EPS_SCF 1.0E-6
        &OUTER_SCF
        MAX_SCF 20
        EPS_SCF 1.0E-6
        &END
        &PRINT
        &RESTART
        &EACH
        MD 0
        &END EACH
        &END
        &END
      &END SCF       
      &XC
      &XC_FUNCTIONAL PBE0
      &END XC_FUNCTIONAL
      &HF
         &MEMORY
          MAX_MEMORY 22000
         &END MEMORY
      &END HF
      &WF_CORRELATION
      	&RI_RPA
	  QUADRATURE_POINTS 100
      	  &GW
	    CORR_MOS_OCC -1
	    CORR_MOS_VIRT -1
	    &BSE
              BSE_DIAG_METHOD FULLDIAG
              TDA OFF
	      ENERGY_CUTOFF_EMPTY 100
              ENERGY_CUTOFF_OCC   100
            &END BSE 
          &END GW	
        &END RI_RPA
      &END WF_CORRELATION
    &END XC
    &PRINT
    &OVERLAP_CONDITION ON
    DIAGONALIZATION T
    &END OVERLAP_CONDITION
    &END PRINT
  &END DFT
    &SUBSYS
    &CELL
      ABC                 30 30 30
      ALPHA_BETA_GAMMA    90 90 90
